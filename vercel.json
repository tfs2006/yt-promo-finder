{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "dest": "/api/analyze.js"
    },
    {
      "src": "/api/collab",
      "dest": "/api/collab.js"
    },
    {
      "src": "/api/growth",
      "dest": "/api/growth.js"
    },
    {
      "src": "/api/unlisted",
      "dest": "/api/unlisted.js"
    },
    {
      "src": "/api/domain",
      "dest": "/api/domain.js"
    },
    {
      "src": "/api/compare",
      "dest": "/api/compare.js"
    },
    {
      "src": "/api/quota",
      "dest": "/api/quota.js"
    },
    {
      "src": "/compare",
      "dest": "/public/compare.html"
    },
    {
      "src": "/domain",
      "dest": "/public/domain.html"
    },
    {
      "src": "/unlisted",
      "dest": "/public/unlisted.html"
    },
    {
      "src": "/growth",
      "dest": "/public/growth.html"
    },
    {
      "src": "/collab",
      "dest": "/public/collab.html"
    },
    {
      "src": "/privacy",
      "dest": "/public/privacy.html"
    },
    {
      "src": "/terms",
      "dest": "/public/terms.html"
    },
    {
      "src": "/disclaimer",
      "dest": "/public/disclaimer.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
